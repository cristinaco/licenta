<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ro.utcn.foodapp" >

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_INTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".presentation.activities.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Camera -->
        <activity
            android:name=".camera.CameraActivity"
            android:screenOrientation="landscape"
            android:label="@string/title_activity_defect_radar_camera" >
        </activity>
        <activity
            android:name=".camera.PreviewPhotoActivity"
            android:label="@string/title_activity_display">
        </activity>
        <activity
            android:name=".presentation.activities.AddProductActivity"
            android:label="@string/title_activity_add_product" >
        </activity>
        <activity
            android:name=".engenoid.tessocrtest.MainActivity"
            android:label="@string/title_activity_add_product" >
        </activity>
    </application>

</manifest>
