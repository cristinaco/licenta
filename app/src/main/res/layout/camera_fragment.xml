<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ripple="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <FrameLayout
        android:id="@+id/camera_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ro.utcn.foodapp.presentation.customview.CameraBoxView
        android:id="@+id/camera_box_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#0000" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:layout_margin="20dip"
        android:gravity="center_vertical">

        <com.andexert.library.RippleView
            android:id="@+id/take_photo_ripple"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="#0000"
            android:gravity="center_vertical"
            ripple:rv_centered="true">


            <ImageButton
                android:id="@+id/activity_capture_take_photo_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/ic_camera_alt_white_48dp"
                android:gravity="center_vertical" />
        </com.andexert.library.RippleView>
    </RelativeLayout>
</FrameLayout>