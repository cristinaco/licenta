<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <item name="actionBarStyle">@style/MyActionBar</item>
    </style>


    <style name="MyActionBar" parent="@style/Widget.AppCompat.ActionBar">
        <item name="titleTextStyle">@style/MyTitleTextStyle</item>
        <item name="background">@color/indigo_primary</item>
    </style>

    <style name="MyTitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/app_text_white</item>
    </style>



    <style name="ActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="background">@color/indigo_primary</item>
        <item name="android:textColor">@color/app_text_white</item>
    </style>

    <style name="AppTheme.CardView" parent="CardView.Light">
        <item name="android:layout_margin">@dimen/spacingCard</item>
    </style>


    <style name="Avatar">
        <item name="android:layout_width">@dimen/sizeAvatar</item>
        <item name="android:layout_height">@dimen/sizeAvatar</item>
    </style>

    <style name="Avatar.WithText" parent="Avatar">
        <item name="android:layout_marginRight">@dimen/spacingBasicDouble</item>
    </style>

    <style name="ListViewGroupHeader">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorListViewBackgroundDark</item>
        <item name="android:textSize">@dimen/listViewGroupHeaderTextSize</item>
    </style>

    <style name="ListViewItem">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <style name="ListViewItemHeaderText">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/listViewHeaderTextSize</item>
    </style>

    <style name="ListViewItemText">
        <item name="android:textColor">@color/colorTextLight</item>
        <item name="android:textSize">@dimen/listViewTextSize</item>
    </style>
    <!--<style name="CircularProgressDrawableStyle" parent="Material.Drawable.CircularProgress"/>-->

    <dimen name="listViewGroupHeaderTextSize">18sp</dimen>
    <dimen name="listViewHeaderTextSize">18sp</dimen>
    <dimen name="listViewTextSize">16sp</dimen>
</resources>
